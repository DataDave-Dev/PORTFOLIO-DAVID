---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="flex flex-row flex-wrap mb-6 bg-slate-800 rounded-xl p-4">
    <div
        class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
    >
        <img class="rounded-t-lg" src={image} alt={title} loading="eager" />
    </div>
    <div class="p-5">
        <h5
            class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
        >
            {title}
        </h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            {description}
        </p>
        <a href={link}>
            <button class="btn btn-gradient btn-primary">Saber m√°s</button>
        </a>
    </div>
</div>
