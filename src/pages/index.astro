---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Python from "../components/Icons/Python.astro";
import SQLServer from "../components/Icons/SQLServer.astro";
import AstroLogo from "../components/Icons/AstroLogo.astro";
import PowerBi from "../components/Icons/PowerBi.astro";
import TimeLine from "../components/TimeLine.astro";
import Proyects from "../components/Proyects.astro";
import Calendar from "../components/Icons/Calendar.astro";
import Folder from "../components/Icons/Folder.astro";
import UserIcon from "../components/Icons/UserIcon.astro";
import Phone from "../components/Icons/Phone.astro";
import Aboutme from "../components/Aboutme.astro";
import Badge from "../components/Badge.astro";
---

<Layout
    title="PortFolio | Web David De León"
    description="Contratame para ayudarte a tomar mejores descisiones con base de tus datos."
>
    <main class="w-full py-44">
        <SectionContainer class="py-56 animate-fade animate-ease-in">
            <h1
                class="font-bold text-3xl md:text-4xl lg:text-5xl text-white flex flex-row gap-x-4 pb-2 lg:pb-4"
            >
                Hola, soy <span class="text-red-700">David De León</span><div
                    class="flex justify-center items-center"
                >
                </div>
            </h1>
            <h2 class="text-xl lg:text-2xl opacity-90 text-wrap max-n-[700px]">
                3 años de experiencia en el mundo IT. <br /> Ubicado en Monterrey,
                Nuevo León, México. <br />
                <span class="text-red-700"
                    >Tu analista de Datos/Sistemas de confianza.</span
                >
            </h2>
            <ul class="flex gap-4 mt-8 flex-wrap">
                <Badge class="border-wgite/10 bg-white/5 hover:bg-white/10">
                    <Python class="size-4 md:size-6" />
                    Python
                </Badge>
                <li
                    class="rounded-full border border-white/10 flex just-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 transition hover:bg-white/10 hover:cursor-pointer"
                >
                    <SQLServer class="size-4 md:size-6" />
                    SQL Server
                </li>
                <li
                    class="rounded-full border border-white/10 flex just-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 transition hover:bg-white/10 hover:cursor-pointer"
                >
                    <PowerBi class="size-4 md:size-6" />
                    Power Bi
                </li>
                <li
                    class="rounded-full border border-white/10 flex just-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 transition hover:bg-white/10 hover:cursor-pointer"
                >
                    <AstroLogo class="size-4 md:size-6" />
                    Astro
                </li>
            </ul>
        </SectionContainer>
        <SectionContainer
            id="Experience"
            class="animate-fade animate-ease-in animate-delay-[1200ms] py-44"
        >
            <div
                class="border border-white/10 bg-white/5 hover:scale-110 transition p-6 rounded-xl hover:cursor-pointer"
            >
                <div class="flex align-middle">
                    <Calendar class="mr-2 size-8" />
                    <h2 class="font-semibold text-2xl mb-6">
                        Experiencia Laboral
                    </h2>
                </div>
                <TimeLine />
            </div>
        </SectionContainer>
        <SectionContainer id="Proyects" class="py-44">
            <div class="flex align-middle">
                <Folder class="mr-2 size-8" />
                <h2 class="font-semibold text-2xl mb-6">Proyectos</h2>
            </div>
            <Proyects />
        </SectionContainer>
        <SectionContainer
            id="About-me"
            class="py-56 items-center justify-center"
        >
            <div class="flex align-middle">
                <UserIcon class="mr-2 size-8" />
                <h2 class="font-semibold text-2xl">Sobre Mi</h2>
            </div>
            <Aboutme />
        </SectionContainer>
        <SectionContainer id="Contact" class="py-44">
            <div class="flex align-middle">
                <Phone class="mr-2 size-8" />
                <h2 class="font-semibold text-2xl">Contacto</h2>
            </div>
        </SectionContainer>
    </main>

    <style></style>
</Layout>
